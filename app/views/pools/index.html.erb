<div class="container">
  <span style="color: green"><%= notice %></span>

  <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">My Pools</h2>
  <div class="divider-custom">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
    <div class="divider-custom-line"></div>
  </div>

  <table class="table table-hover table-bordered">
    <thead class="table-dark text-center">
      <tr>
        <th>Project</th>
        <th>Round</th>
        <th>Platform</th>
        <th>Amount</th>
        <th>Price, $</th>
        <th>Vesting Schedule</th>
        <th>Launch Date</th>
      </tr>
    </thead>
    <tbody>
      <%= render @pools %>
    </tbody>
  </table>

  <div class="ms-3">
    <%= link_to "Add Project", new_pool_path, class:"btn btn-sm btn-primary" %>
  </div>
</div>

